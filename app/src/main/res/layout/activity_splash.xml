<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2231A" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_image_margintop"
        android:src="@drawable/home_logo" />

    <View
        android:id="@+id/id_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_view_height"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/rl_flash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/splash_progressbar_height"
        android:layout_below="@id/id_text"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pb_flash"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/splash_progressbar_marginhorizontal"
            android:layout_marginRight="@dimen/splash_progressbar_marginhorizontal" />
    </RelativeLayout>

</RelativeLayout>